block content
  .form-elements__box
    .form-elements__column
      .element-box 
        .element-box__caption
          .element-box__caption_left
            h3 Text Field
          .element-box__caption_right
            h3 Default
        .element-box__body 
          input.input-string(type="text",placeholder="Email")
      .element-box 
        .element-box__caption
          .element-box__caption_left
            h3 Text Field
          .element-box__caption_right
            h3 Hover / Focus
        .element-box__body 
          input.input-string(type="text",placeholder="This is pretty awesome")
      .element-box 
        .element-box__caption
          .element-box__caption_left
            h3 Dropdown
          .element-box__caption_right
            h3 
        .element-box__body 
          +dropdown
      .element-box 
        .element-box__caption
          .element-box__caption_left
            h3 masked text field
          .element-box__caption_right
            h3 
        .element-box__body 
          input.input-string(type="text",placeholder="ДД.ММ.ГГГГ",pattern="\d\d\.\d\d\.\d{4}")
      .two-elements-box
        .element-box-50
          .element-box__caption_left
            h3 date Dropdown
          .element-box__body
            .date-dropdown
              .date-dropdown__selection
                //- .datepicker-here
                input.date-dropdown__input(type="text",id="datepicker",placeholder="ДД.ММ.ГГГГ",pattern="\d\d\.\d\d\.\d{4}")
                p.icon-expand_more.date-dropdown__selection_arrow
        .element-box-50
          .element-box__caption_left
            h3 date Dropdown
          .element-box__body
            .date-dropdown
              .date-dropdown__selection
                input.date-dropdown__input(type="text",placeholder="ДД.ММ.ГГГГ",pattern="\d\d\.\d\d\.\d{4}",value="19-08-2019")
                p.icon-expand_more.date-dropdown__selection_arrow
      .element-box-266px
        .element-box__caption_left
          h3 filter date dropdown
        .element-box__body
          .date-dropdown
            .date-dropdown__selection
              input.date-dropdown-filter__input(type="text",value="19 авг - 23 авг")
              //- p 19 авг - 23 авг
              p.icon-expand_more.date-dropdown__selection_arrow
          //- input.input-string(type="text",placeholder="19 авг - 23 авг")
      .element-box-266px
        .element-box__caption_left
          h3 subscription text field
        .element-box__body
          input.input-string(type="emil",placeholder="Email",pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$")

