extends ../layout/ui-kit
include blocks/dropdown/dropdown
include blocks/rate-button/rate-button
block title
  |Form Elements

block style
  link(rel="stylesheet", href="./form-elements.scss")
block script
  script(src="./form-elements.js", type="module")
